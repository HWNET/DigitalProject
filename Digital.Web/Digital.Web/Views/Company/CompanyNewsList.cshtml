                                    <td>@NewsMode.NewsCategoryModel.NewsCategoryName</td>
                                    <td>@NewsMode.ReleaseTime</td>
                                    <td class="table-action-hide">
                                        <a href=""><i class="fa fa-pencil"></i></a>
                                        <a href="" class="delete-row"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
